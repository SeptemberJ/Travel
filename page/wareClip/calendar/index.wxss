/*日历*/
.YearMonth{
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  }
  .prev, .next{
    width: 40rpx;
    height: 40rpx;
  }
  .showData{
    width: 50%;
    text-align: center;
  }
  .weeksTit{
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    /*border-bottom: 1px solid #BBFFFF;*/
  }
  .weeksTit_item{
    display: flex;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
  }
  /*days*/
  .days{
    height: 500rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
  }
  .days_item{
    width: 107.1428571429rpx;
    /*height: 107.1428571429rpx;*/
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /*flex-grow: 1;*/
  }
  .specialItem{
    color: #ff629a;
    /*color: #ff629a;*/
  }
  .normalItem{
    color: #cccccc;
  }
  .dayPrice{
    font-size: 30rpx;
  }
  .dayPrice text{
    font-size: 17rpx;
  }
  .oldPrice{
    text-decoration: line-through;
  }
  .active{
    color: #fff;
    background: #9980DB;
    /*background: #9980DB;*/
  }
  /*members*/
  .members{
    width: calc(100% - 40rpx);
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10rpx 20rpx;
  }
  .member_item{
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
    .member_item:nth-of-type(1){
      border-bottom: 1px solid #eee;
  }
  .left{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
  }
  .right{
    width: 100%;
    display: flex;
    align-content: center;
    justify-content: flex-end;
  }
  .numChange{
    width: 200rpx;
    height: 60rpx;
    border-radius: 5rpx;
    border: 1px solid #e4e4e4;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .numChange image{
    width: 50rpx;
    height: 50rpx;
    margin: auto;
  }
  .numColor{
    background: #9980DB;
    color: #fff;
  }
  .num{
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    border-left: 1px solid #e4e4e4;
    border-right: 1px solid #e4e4e4;
  }
