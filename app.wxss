page {
    /*background-color: #ebebeb;*/
    background: #fff;
    height: 100%;
    font-size: 30rpx;
    font-family:"Microsoft Yahei", Helvetica Neue, Helvetica, Arial, sans-serif;
}
.container {
    font-family:"Microsoft Yahei", Helvetica Neue, Helvetica, Arial, sans-serif;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 20rpx;
    margin-bottom: 80rpx;
}
swiper{
  width: 100%;
}
map{
  margin-top: 10rpx;
}
text{
  font-size: 30rpx;
}
.blank{
  width: 100%;
  height: 40rpx;
  background: #f5f5f5;
}
.orange{
  color: #f60;
}
.bold{
  font-weight: bold;
}
/*无数据*/
.noData{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
  margin: 20rpx;
}
.noData image{
	width: 180rpx;
	height: 180rpx;
	margin-bottom: 20rpx;
}
.noData text{
  width: 100%;
  text-align: center;
	color: #777;
}
/*GPS*/
.locationBlock{
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  background: #9980DB;
  /*justify-content: flex-end;*/
}
.locationBlock text{
  height: 50rpx;
  color: #fff;
  line-height: 50rpx;
}
.locationBlock image{
  width: 50rpx;
  height: 50rpx;
}
